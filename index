  <!-- Chart.js from CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

  <script>
    const API_BASE = "https://opendata.nhsbsa.net/api/3/action";
    const DATASET_ID = "english-prescribing-dataset-epd-with-snomed-code";
    const PAGE_SIZE = 32000;
    const MAX_PAGES_PER_MONTH = 10; // safety cap
    const MAX_DISPLAY_ROWS = 500;
    const PRACTICE_SELECT_LIMIT = 60;
    const METRIC_COLUMNS = ["ITEMS", "TOTAL_QUANTITY", "NIC", "ACTUAL_COST", "ADQ_USAGE"];

    let monthsIndex = [];      // [{ yearMonth: '2025-09', resourceId: 'EPD_SNOMED_202509' }, ...]
    let rawRecords = [];       // all raw rows fetched for current query
    let aggregated = [];       // practice-month aggregates
    let chartInstance = null;  // Chart.js instance

    // --- Utility helpers ---------------------------------------------------

    function $(id) {
      return document.getElementById(id);
    }

    function setStatus(message, { loading = false, error = false } = {}) {
      const el = $("status");
      if (!el) return;
      el.textContent = message || "";
      el.classList.remove("hidden", "loading", "error");
      if (loading) el.classList.add("loading");
      if (error) el.classList.add("error");
      if (!loading && !error && !message) {
        el.classList.add("hidden");
      }
    }

    function setFormEnabled(enabled) {
      $("drugQuery").disabled = !enabled;
      $("exactMatch").disabled = !enabled;
      $("startMonth").disabled = !enabled;
      $("endMonth").disabled = !enabled;
      $("runButton").disabled = !enabled;
    }

    function csvEscape(value) {
      if (value === null || value === undefined) return "";
      const s = String(value);
      if (/[",\n]/.test(s)) {
        return '"' + s.replace(/"/g, '""') + '"';
      }
      return s;
    }

    function downloadCsv() {
      if (!aggregated.length) {
        alert("No aggregated data available yet.");
        return;
      }
      const cols = Object.keys(aggregated[0]);
      const lines = [cols.join(",")];
      aggregated.forEach(row => {
        const line = cols.map(c => csvEscape(row[c])).join(",");
        lines.push(line);
      });
      const blob = new Blob([lines.join("\n")], { type: "text/csv;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = "epd_practice_by_month.csv";
      document.body.appendChild(a);
      a.click();
      a.remove();
      URL.revokeObjectURL(url);
    }

    // --- API functions -----------------------------------------------------

    async function fetchJson(url) {
      const res = await fetch(url);
      if (!res.ok) {
        throw new Error(`HTTP ${res.status} – ${res.statusText}`);
      }
      const data = await res.json();
      if (data && data.success === false) {
        throw new Error("API returned success = false");
      }
      return data;
    }

    async function initMonths() {
      try {
        const url = `${API_BASE}/package_show?id=${encodeURIComponent(DATASET_ID)}`;
        const data = await fetchJson(url);
        const resources = (data.result && data.result.resources) || [];

        const months = [];
        resources.forEach(r => {
          const name = r.name || "";
          if (!name.startsWith("EPD_SNOMED_")) return;
          const yyyymm = name.split("_").pop();
          if (!/^\d{6}$/.test(yyyymm)) return;
          const year = yyyymm.slice(0, 4);
          const month = yyyymm.slice(4, 6);
          const yearMonth = `${year}-${month}`;
          months.push({ yearMonth, resourceId: name });
        });

        months.sort((a, b) => a.yearMonth.localeCompare(b.yearMonth));
        monthsIndex = months;

        if (!monthsIndex.length) {
          setStatus("No monthly resources found in dataset metadata.", { error: true });
          setFormEnabled(false);
          return;
        }

        // Populate selects
        const startSel = $("startMonth");
        const endSel = $("endMonth");
        startSel.innerHTML = "";
        endSel.innerHTML = "";

        monthsIndex.forEach(m => {
          const opt1 = document.createElement("option");
          opt1.value = m.yearMonth;
          opt1.textContent = m.yearMonth;
          startSel.appendChild(opt1);

          const opt2 = document.createElement("option");
          opt2.value = m.yearMonth;
          opt2.textContent = m.yearMonth;
          endSel.appendChild(opt2);
        });

        const lastIdx = monthsIndex.length - 1;
        const firstIdx = Math.max(0, lastIdx - 11);
        startSel.value = monthsIndex[firstIdx].yearMonth;
        endSel.value = monthsIndex[lastIdx].yearMonth;

        setStatus("Months loaded. Enter a drug and run the query.");
      } catch (err) {
        setStatus(
          `Failed to load months from NHSBSA Open Data API: ${err.message}. ` +
          "If you see a 'Failed to fetch' type error in the browser console, " +
          "it may be due to network or CORS restrictions.",
          { error: true }
        );
        setFormEnabled(false);
      }
    }

    async function fetchDrugDataForResource(resourceId, drugQuery, exactMatch) {
      let offset = 0;
      let pages = 0;
      const allRecords = [];

      while (pages < MAX_PAGES_PER_MONTH) {
        const params = new URLSearchParams({
          resource_id: resourceId,
          limit: String(PAGE_SIZE),
          offset: String(offset)
        });

        if (exactMatch) {
          params.set("filters", JSON.stringify({ BNF_PRESENTATION_NAME: drugQuery }));
        } else {
          params.set("q", JSON.stringify({ BNF_PRESENTATION_NAME: drugQuery }));
        }

        const url = `${API_BASE}/datastore_search?${params.toString()}`;
        const data = await fetchJson(url);
        const result = data.result || {};
        const records = result.records || [];
        const total = result.total || 0;

        if (!records.length) break;

        allRecords.push(...records);

        offset += PAGE_SIZE;
        pages += 1;
        if (offset >= total) break;
      }

      return allRecords;
    }

    // --- Aggregation & display --------------------------------------------

    function aggregateByPracticeMonth(records) {
      const map = new Map();

      records.forEach(rec => {
        const ym = rec.YEAR_MONTH;
        const pcode = rec.PRACTICE_CODE || "";
        const pname = rec.PRACTICE_NAME || "";
        if (!ym || !pcode) return;

        const key = `${ym}||${pcode}`;
        let agg = map.get(key);
        if (!agg) {
          agg = {
            YEAR_MONTH: ym,
            PRACTICE_CODE: pcode,
            PRACTICE_NAME: pname
          };
          METRIC_COLUMNS.forEach(col => (agg[col] = 0));
          map.set(key, agg);
        }

        METRIC_COLUMNS.forEach(col => {
          const val = rec[col];
          if (val !== null && val !== undefined && val !== "") {
            const num = Number(val);
            if (!Number.isNaN(num)) {
              agg[col] += num;
            }
          }
        });
      });

      const arr = Array.from(map.values());
      arr.sort((a, b) => {
        if (a.YEAR_MONTH !== b.YEAR_MONTH) {
          return a.YEAR_MONTH.localeCompare(b.YEAR_MONTH);
        }
        return (a.PRACTICE_NAME || "").localeCompare(b.PRACTICE_NAME || "");
      });
      return arr;
    }

    function renderTable(data) {
      const table = $("resultsTable");
      const note = $("tableNote");
      table.innerHTML = "";
      note.textContent = "";

      if (!data.length) {
        table.innerHTML = "<tbody><tr><td>No data to display.</td></tr></tbody>";
        return;
      }

      const first = data[0];
      const metricsAvailable = METRIC_COLUMNS.filter(col => col in first);
      const columns = ["YEAR_MONTH", "PRACTICE_CODE", "PRACTICE_NAME", ...metricsAvailable];

      const thead = document.createElement("thead");
      const trHead = document.createElement("tr");
      columns.forEach(col => {
        const th = document.createElement("th");
        th.textContent = col;
        trHead.appendChild(th);
      });
      thead.appendChild(trHead);
      table.appendChild(thead);

      const tbody = document.createElement("tbody");
      const rowsToShow = data.slice(0, MAX_DISPLAY_ROWS);
      rowsToShow.forEach(row => {
        const tr = document.createElement("tr");
        columns.forEach(col => {
          const td = document.createElement("td");
          let value = row[col];

          if (metricsAvailable.includes(col)) {
            const num = Number(value);
            if (!Number.isNaN(num)) {
              // 2dp for money & ADQ, 0dp for counts
              const dp = ["NIC", "ACTUAL_COST", "ADQ_USAGE"].includes(col) ? 2 : 0;
              value = num.toLocaleString("en-GB", {
                minimumFractionDigits: 0,
                maximumFractionDigits: dp
              });
            }
          }

          td.textContent = value === undefined || value === null ? "" : value;
          tr.appendChild(td);
        });
        tbody.appendChild(tr);
      });
      table.appendChild(tbody);

      if (data.length > MAX_DISPLAY_ROWS) {
        note.textContent = `Showing the first ${MAX_DISPLAY_ROWS.toLocaleString(
          "en-GB"
        )} rows out of ${data.length.toLocaleString("en-GB")}. Use the CSV download for the full table.`;
      } else {
        note.textContent = `${data.length.toLocaleString("en-GB")} practice‑month rows.`;
      }
    }

    function buildPracticeOptions() {
      const metricCol = "ITEMS";
      const practiceTotals = new Map();

      aggregated.forEach(row => {
        const name = row.PRACTICE_NAME || row.PRACTICE_CODE;
        if (!name) return;
        const current = practiceTotals.get(name) || 0;
        const add = Number(row[metricCol]) || 0;
        practiceTotals.set(name, current + add);
      });

      const sorted = Array.from(practiceTotals.entries())
        .sort((a, b) => b[1] - a[1])
        .slice(0, PRACTICE_SELECT_LIMIT);

      const select = $("practicesSelect");
      select.innerHTML = "";
      sorted.forEach(([name]) => {
        const opt = document.createElement("option");
        opt.value = name;
        opt.textContent = name;
        select.appendChild(opt);
      });

      // Preselect up to 6 practices
      Array.from(select.options)
        .slice(0, 6)
        .forEach(opt => (opt.selected = true));
    }

    function buildMetricOptions() {
      if (!aggregated.length) return;
      const first = aggregated[0];
      const available = METRIC_COLUMNS.filter(c => c in first);
      const sel = $("metricSelect");
      sel.innerHTML = "";
      available.forEach(col => {
        const opt = document.createElement("option");
        opt.value = col;
        opt.textContent = col;
        sel.appendChild(opt);
      });
    }

    function updateChart() {
      if (!aggregated.length) return;

      const metric = $("metricSelect").value;
      const practiceSelect = $("practicesSelect");
      const selectedPractices = Array.from(practiceSelect.selectedOptions).map(
        o => o.value
      );

      if (!metric || !selectedPractices.length) {
        if (chartInstance) {
          chartInstance.destroy();
          chartInstance = null;
        }
        return;
      }

      const months = Array.from(
        new Set(aggregated.map(row => row.YEAR_MONTH))
      ).sort();

      const datasets = selectedPractices.map(name => {
        const values = months.map(m => {
          const row = aggregated.find(
            r => r.YEAR_MONTH === m && (r.PRACTICE_NAME === name || r.PRACTICE_CODE === name)
          );
          const v = row ? Number(row[metric]) || 0 : 0;
          return v;
        });
        return {
          label: name,
          data: values,
          tension: 0.2,
          pointRadius: 2,
          borderWidth: 2
          // Chart.js will assign colours automatically
        };
      });

      const ctx = $("chartCanvas").getContext("2d");
      if (chartInstance) {
        chartInstance.destroy();
      }

      chartInstance = new Chart(ctx, {
        type: "line",
        data: {
          labels: months,
          datasets
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          interaction: {
            mode: "index",
            intersect: false
          },
          plugins: {
            legend: {
              position: "bottom"
            },
            tooltip: {
              callbacks: {
                label: ctx => {
                  const v = ctx.parsed.y;
                  return `${ctx.dataset.label}: ${v.toLocaleString("en-GB", {
                    maximumFractionDigits: 2
                  })}`;
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    }

    function applyPresentationFilter() {
      if (!rawRecords.length) return;

      const select = $("presentationSelect");
      const chosen = select.value;
      const filtered = chosen
        ? rawRecords.filter(r => r.BNF_PRESENTATION_NAME === chosen)
        : rawRecords.slice();

      aggregated = aggregateByPracticeMonth(filtered);
      renderTable(aggregated);
      buildMetricOptions();
      buildPracticeOptions();
      $("chartContainer").classList.toggle("hidden", !aggregated.length);
      updateChart();

      const statsEl = $("resultsStats");
      statsEl.textContent = `${aggregated.length.toLocaleString(
        "en-GB"
      )} practice‑month rows • ${filtered.length.toLocaleString(
        "en-GB"
      )} raw rows.`;
    }

    // --- Event handlers ----------------------------------------------------

    async function handleSearch(ev) {
      ev.preventDefault();

      const drugQuery = $("drugQuery").value.trim();
      const exactMatch = $("exactMatch").checked;
      const startMonth = $("startMonth").value;
      const endMonth = $("endMonth").value;

      if (!drugQuery) {
        alert("Please enter a drug name (BNF presentation).");
        return;
      }

      if (startMonth > endMonth) {
        setStatus("Start month is after end month – please adjust the range.", {
          error: true
        });
        return;
      }

      const selectedMonths = monthsIndex.filter(
        m => m.yearMonth >= startMonth && m.yearMonth <= endMonth
      );

      if (!selectedMonths.length) {
        setStatus("No months selected – please adjust the month range.", {
          error: true
        });
        return;
      }

      setFormEnabled(false);
      setStatus("Querying NHSBSA Open Data API for selected months…", {
        loading: true
      });
      $("resultsArea").classList.add("hidden");
      $("presentationChoice").classList.add("hidden");
      $("summaryArea").innerHTML =
        `<p class="summary-line"><strong>BNF query:</strong> <code style="font-family:${getComputedStyle(document.documentElement).getPropertyValue(
          "--mono"
        )}; font-size:0.8rem;">${drugQuery}</code></p>` +
        `<p class="summary-line"><strong>Months:</strong> ${startMonth} → ${endMonth} (${selectedMonths.length} month${selectedMonths.length > 1 ? "s" : ""})</p>`;

      rawRecords = [];
      aggregated = [];
      if (chartInstance) {
        chartInstance.destroy();
        chartInstance = null;
      }

      try {
        for (const m of selectedMonths) {
          setStatus(
            `Fetching ${m.yearMonth} (${m.resourceId})…`,
            { loading: true }
          );
          const rows = await fetchDrugDataForResource(
            m.resourceId,
            drugQuery,
            exactMatch
          );
          rawRecords.push(...rows);
        }

        if (!rawRecords.length) {
          setStatus(
            "No rows found for that drug name in the selected months. " +
              "Check the spelling or try disabling exact‑match.",
            { error: true }
          );
          setFormEnabled(true);
          return;
        }

        setStatus("");

        // BNF presentation choice (if needed)
        const names = Array.from(
          new Set(
            rawRecords
              .map(r => r.BNF_PRESENTATION_NAME)
              .filter(Boolean)
          )
        ).sort();

        const presentationSelect = $("presentationSelect");
        presentationSelect.innerHTML = "";

        if (names.length > 1) {
          names.forEach(n => {
            const opt = document.createElement("option");
            opt.value = n;
            opt.textContent = n;
            presentationSelect.appendChild(opt);
          });
          $("presentationChoice").classList.remove("hidden");
          presentationSelect.onchange = applyPresentationFilter;
        } else if (names.length === 1) {
          const opt = document.createElement("option");
          opt.value = names[0];
          opt.textContent = names[0];
          presentationSelect.appendChild(opt);
          $("presentationChoice").classList.add("hidden");
        } else {
          $("presentationChoice").classList.add("hidden");
        }

        // Aggregate + render
        applyPresentationFilter();
        $("resultsArea").classList.remove("hidden");

        const title = $("resultsTitle");
        if (presentationSelect.options.length === 1) {
          title.textContent =
            "Results – " + presentationSelect.options[0].textContent;
        } else if (presentationSelect.options.length > 1) {
          title.textContent = "Results – multiple BNF presentations";
        } else {
          title.textContent = "Results";
        }
      } catch (err) {
        setStatus(
          `Error while querying the Open Data API: ${err.message}`,
          { error: true }
        );
      } finally {
        setFormEnabled(true);
      }
    }

    // --- Initialise --------------------------------------------------------

    document.addEventListener("DOMContentLoaded", () => {
      $("searchForm").addEventListener("submit", handleSearch);
      $("downloadCsvButton").addEventListener("click", downloadCsv);
      $("metricSelect").addEventListener("change", updateChart);
      $("practicesSelect").addEventListener("change", updateChart);
      initMonths();
    });
  </script>
</body>
</html>
